<p id="notice"><%= notice %></p>
<h3><strong>Enter name of project:</strong></h3>
    <%= form_for"", url: tasks_path, role: "search", method: :get  do |f|%>
   <%= f.select(:project_id, projects_for_select, {prompt: 'Select name projects'}, {class: 'btn btn-outline-secondary dropdown-toggle', id: 'select'}) %>
    Create between:
    <%= date_field_tag(:search_date_1, min: 1.year.ago.strftime('%Y-%m-%d') )%>
    <%= date_field_tag(:search_date_2, min: 1.year.ago.strftime('%Y-%m-%d') )%>
    Long to short:
    <%= check_box_tag(:long_short, true, false, options = {}) %>
    Short to long:
    <%= check_box_tag(:short_long,  options = {}) %>
    <%= f.submit "Submit" %>
    <% end %>
    <br>
<table class='tasks_table'>
    <tr>
     <th class='task__title' colspan="6">
       <h1>Today</h1>
     </th>
   </tr>
   <tr>
      <th>Project</th>
      <th>User</th>
      <th>End time</th>
      <th>Description</th>
    </tr>

    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.project_name %></td>
        <td><%= task.user_id %></td>
        <td><%= task.end_time %></td>
        <td><%= task.description %></td>
        <td colspan="2"><%= link_to 'Show', task %> <%= link_to 'Edit', edit_task_path(task) %> <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.project_id %></td>
          <td><%= task.user_id %></td>
          <td nowrap><%= task.end_time %></td>
          <td colspan="2"><%= task.description %></td>
          <td colspan="2">
            <% if current_user.admin? %>
              <%= link_to 'Show', task, class: "btn btn-success" %>
              <%= link_to 'Edit', edit_task_path(task), class: "btn btn-primary" %>
            <% end %>
            <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td class="pagination" colspan="2"><%= will_paginate(@tasks) %></td>
        <% if current_user.admin? %>
          <td colspan="2"><%= link_to 'New Task', new_task_path, class: "new_task_task_page btn btn-warning" %></td>
        <% end %>
      </tr>
  </table>
</div>
